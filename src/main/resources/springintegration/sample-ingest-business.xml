<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:int="http://www.springframework.org/schema/integration"
       xmlns:int-file="http://www.springframework.org/schema/integration/file"
       xmlns:int-xml="http://www.springframework.org/schema/integration/xml"
       xmlns:int-sftp="http://www.springframework.org/schema/integration/sftp"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
  http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
  http://www.springframework.org/schema/integration http://www.springframework.org/schema/integration/spring-integration.xsd
  http://www.springframework.org/schema/integration/xml
  http://www.springframework.org/schema/integration/xml/spring-integration-xml.xsd
  http://www.springframework.org/schema/integration/sftp
  http://www.springframework.org/schema/integration/sftp/spring-integration-sftp.xsd">
  
    <import resource="session-factory.xml"/>

    <int:channel id="sftpInboundBusiness"/>
    <int:channel id="xmlInvalidBusiness" />

    <int:publish-subscribe-channel id="xmlValidBusiness" />

    <int-sftp:inbound-channel-adapter id="sftpInboundAdapterBusiness"
            channel="sftpInboundBusiness"
            session-factory="sftpSessionFactory"
            local-directory="${sftp.directory.local}${sftp.directory.business}"
            local-filter="businessFileListFilter"
            filter="businessCompositeFilter"
            remote-file-separator="/"
            remote-directory="${sftp.directory.root}${sftp.directory.business}">
        <int:poller cron="${sftp.cron}"  max-messages-per-poll="1" error-channel="pollerErrorChannel"/>
    </int-sftp:inbound-channel-adapter>

    <int-file:file-to-string-transformer id="fileToStringTransformerBusiness" input-channel="sftpInboundBusiness" output-channel="xmlBusiness" delete-files="true" charset="UTF-8"/> 

    <int:header-enricher input-channel="xmlBusiness" output-channel="xmlBusinessAddedHeader">
        <int:header name="sample_type" value="business" />
    </int:header-enricher>

    <int-xml:validating-filter id="xmlValidatorBusiness" input-channel="xmlBusinessAddedHeader"
                                output-channel="xmlValidBusiness" schema-location="classpath:samplesvc/xsd/inbound/business-survey-sample.xsd" throw-exception-on-rejection="true"/>
       
    <int-xml:unmarshalling-transformer input-channel="xmlValidBusiness" output-channel="xmlTransformedBusiness" unmarshaller="unmarshallerBusiness" />
    
    <bean id="unmarshallerBusiness" class="org.springframework.oxm.jaxb.Jaxb2Marshaller">
        <property name="contextPath" value="uk.gov.ons.ctp.response.sample.definition" />
    </bean>
                               
    <int:channel id="xmlTransformedBusiness"  datatype="uk.gov.ons.ctp.response.sample.definition.BusinessSurveySample"></int:channel>

     <int-sftp:outbound-gateway id="renameFileBusiness"
                          session-factory="sftpSessionFactory"
                          request-channel="renameBusinessXMLFile"
                          reply-channel="nullChannel"
                          auto-startup="true"
                          remote-file-separator="/"
                          command="mv"
                          expression="'${sftp.directory.root}${sftp.directory.business}' + headers['file_name']"
                          rename-expression="'${sftp.directory.root}${sftp.directory.business}' + headers['file_name'] + '.processed'"
                          order="1">
        <int-sftp:request-handler-advice-chain>
            <bean class="org.springframework.integration.handler.advice.ExpressionEvaluatingRequestHandlerAdvice">
                <property name="onSuccessExpression" value="#root" />
                <property name="successChannel" ref="renameSuccessProcess" />
                <property name="onFailureExpression" value="#root" />
                <property name="failureChannel" ref="renameFailedProcess" />
            </bean>
        </int-sftp:request-handler-advice-chain>
  </int-sftp:outbound-gateway>
  <int:channel id="renameSuccessProcess"/>
  <int:channel id="renameFailedProcess"/>

    <bean id="businessCompositeFilter"
          class="org.springframework.integration.file.filters.CompositeFileListFilter">
        <constructor-arg>
            <list>
                <bean class="org.springframework.integration.sftp.filters.SftpSimplePatternFileListFilter">
                    <constructor-arg value="*.xml" />
                </bean>
                <bean id="SftpPersistentAcceptOnceFileListFilter" class="org.springframework.integration.sftp.filters.SftpPersistentAcceptOnceFileListFilter">
                    <constructor-arg ref="metadataStore" />
                    <constructor-arg value="businessSampleLock_" />
                </bean>
            </list>
        </constructor-arg>
    </bean>
    
    <bean id="businessFileListFilter" class="org.springframework.integration.file.filters.FileSystemPersistentAcceptOnceFileListFilter">
    	<constructor-arg ref="metadataStore" />
        <constructor-arg value="businessSampleFileLock_" />
    </bean>
  
</beans>